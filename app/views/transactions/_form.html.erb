<%= form_with(model: transaction, class: "space-y-6") do |form| %>
  <% if transaction.errors.any? %>
    <div class="alert alert-error">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <div>
        <h3 class="font-bold"><%= pluralize(transaction.errors.count, "error") %> prohibited this from being saved:</h3>
        <ul class="list-disc list-inside">
          <% transaction.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-control w-full">
    <%= form.label :title, class: "label" do %>
      <span class="label-text font-semibold">Title / Description</span>
    <% end %>
    <%= form.text_field :title, class: "input input-bordered w-full", placeholder: "e.g., Lunch with team" %>
  </div>

  <div class="form-control w-full">
    <%= form.label :amount, class: "label" do %>
      <span class="label-text font-semibold">Amount (à¸¿)</span>
    <% end %>
    <%= form.number_field :amount, step: "0.01", class: "input input-bordered w-full", placeholder: "0.00" %>
  </div>

  <div class="form-control w-full">
    <%= form.label :kind, class: "label" do %>
      <span class="label-text font-semibold">Type</span>
    <% end %>
    <%= form.select :kind, [['Income', 'income'], ['Expense', 'expense']], {}, class: "select select-bordered w-full" %>
  </div>

  <div class="form-control w-full">
    <%= form.label :date, class: "label" do %>
      <span class="label-text font-semibold">Date</span>
    <% end %>
    <%= form.date_field :date, class: "input input-bordered w-full", value: transaction.date || Date.today %>
  </div>

  <%= form.hidden_field :user_id %>

  <div class="form-control mt-8">
    <%= form.submit class: "btn btn-primary w-full" %>
  </div>
<% end %>
