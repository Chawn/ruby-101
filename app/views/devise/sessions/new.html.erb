<div class="card bg-base-100 shadow-xl">
  <div class="card-body w-full">
    <h2 class="text-3xl font-bold text-center w-full mb-6">
    Ruby 101 App</h2>
    <p class="text-center text-base-content/60 mb-4">Sign in to your account</p>
    
  

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-control w-full mb-4">
        <%= f.label :email, class: "label" do %>
          <span class="label-text">Email</span>
        <% end %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full", placeholder: "admin@example.com", value: "admin@example.com" %>
      </div>

      <div class="form-control w-full mb-4">
        <%= f.label :password, class: "label" do %>
          <span class="label-text">Password</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input input-bordered w-full", placeholder: "admin", value: "admin" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-control mb-6">
          <label class="label cursor-pointer justify-start gap-2">
            <%= f.check_box :remember_me, class: "checkbox checkbox-primary" %>
            <span class="label-text">Remember me</span>
          </label>
        </div>
      <% end %>

      <div class="form-control mt-6">
        <%= f.submit "Sign in", class: "btn btn-primary w-full" %>
      </div>
    <% end %>

    <div class="divider">OR</div>

    <div class="text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
