<% content_for :title, "Post Details" %>

<div class="w-full max-w-2xl mx-auto">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold mb-6"><%= @post.title %></h2>
      
      <div class="space-y-4">
        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Author</span>
          </label>
          <div class="text-sm text-base-content/60"><%= @post.user&.email %></div>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Content</span>
          </label>
          <div class="prose max-w-none">
            <%= simple_format(@post.content) %>
          </div>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Published</span>
          </label>
          <div class="text-sm"><%= @post.created_at.strftime("%d %B %Y at %H:%M") %></div>
        </div>
      </div>

      <div class="divider"></div>
      
      <div class="flex justify-between gap-2">
        <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
        <div class="flex gap-2">
          <%= link_to "Back to list", posts_path, class: "btn btn-ghost" %>
          <%= button_to "Delete", @post, method: :delete, class: "btn btn-error", data: { controller: "confirm", action: "click->confirm#delete" } %>
        </div>
      </div>
    </div>
  </div>
</div>
