<% content_for :title, "Todo Details" %>

<div class="w-full max-w-2xl mx-auto">
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-3xl font-bold mb-6">Todo Details</h2>
      
      <div class="space-y-4">
        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Title</span>
          </label>
          <div class="text-lg"><%= @todo.title %></div>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text font-semibold">Status</span>
          </label>
          <div>
            <%= @todo.status == 'completed' ? '<span class="badge badge-success">Completed</span>'.html_safe : '<span class="badge badge-warning">Pending</span>'.html_safe %>
          </div>
        </div>
      </div>

      <div class="divider"></div>
      
      <div class="flex justify-between gap-2">
        <%= link_to "Edit", edit_todo_path(@todo), class: "btn btn-primary" %>
        <div class="flex gap-2">
          <%= link_to "Back to list", todos_path, class: "btn btn-ghost" %>
          <%= button_to "Delete", @todo, method: :delete, class: "btn btn-error", data: { controller: "confirm", action: "click->confirm#delete" } %>
        </div>
      </div>
    </div>
  </div>
</div>
